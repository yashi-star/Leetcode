class Solution {
public:
    vector<vector<int>>helper(int ind, int target, vector<int>& candidates,vector<int>&ds,vector<vector<int>>&ans){
            
            int n=candidates.size();
            if(ind==n){
                if(target==0){
                    ans.push_back(ds);
                }
                return ans;
            }             
                if(candidates[ind]<=target){
                    ds.push_back(candidates[ind]);
                    helper(ind,target-candidates[ind],candidates,ds,ans); 
                    ds.pop_back();
                }
                    helper(ind+1,target,candidates,ds,ans);
            
            return ans;
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>>ans;
        vector<int>ds;
        return helper(0,target,candidates,ds,ans);
    }
};
