class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int l=0;
        int r=0;
        int n=s.size();
        vector<int>hash(256,-1);
        int maxlen=0,len=0;
        while(r<n){
            if(hash[s[r]]!=-1){
                l=max(hash[s[r]]+1, l);
            }
            len=r-l+1;
            maxlen=max(maxlen,len);
            hash[s[r]]=r;
            r++;
        }
        return maxlen;
    }
};
